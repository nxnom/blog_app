<%= link_to user_post_path(user, post) do %>
  <%= stylesheet_link_tag 'post_card' %>
  <% is_post_view ||= false %>

  <article id="<%= dom_id post %>" class="post-card">
    <h6><%= post.title %></h6>

    <div
      class="col <% if is_post_view %>col-reverse<% end %>"
      >
      <p><%= post.text %></p>
      <span> Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </span>
    </div>

    <% show_comments ||= is_post_view ? true : false %>
    <% comments = is_post_view ? post.comments : post.recent_comments %>

    <% if show_comments && comments.length > 0 %>
      <section>
        <%= render partial: 'shared/comment', collection: comments %>
      </section>
    <% end %>
  </article>
<% end %>

