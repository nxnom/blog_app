<main>
  <%= render "shared/user_card", user: @user %>
  <blockquote> 
    <cite>Bio</cite></br></br>
    <%= @user.bio %> 
  </blockquote>

  <% @user.recent_posts.each do |post| %>
    <%= render "shared/post_card", post: post %>
  <% end %>

  <%= link_to "See all posts", user_posts_path(@user), class:"button self-center" %>
</main>
